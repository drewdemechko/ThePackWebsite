@model InspirationSite.Models.BlogPosts
@{ ViewBag.Title = "Add Blog Post"; }
<div class="container">
    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Add a New Blog Entry
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li>
                    @Html.ActionLink("Blog Entries", "Entries", "Blog")
                </li>
                <li class="active">Add Blog Post</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            @using (Html.BeginForm("AddVideo", "Blog", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <h3>Add a New Post to the Blog</h3>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Title:</label>
                        @Html.TextBoxFor(m => m.Title, null, new { @class = "form-control", size = "400" })
                        <p class="help-block"></p>
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Content:</label>
                        @Html.TextAreaFor(m => m.Content, new { @class = "form-control", style = "resize:none;", rows = "10" })
                        <p class="help-block"></p>
                    </div>
                </div>
                <div id="success"></div>
                <!-- For success/fail messages -->
                <input type="submit" class="btn btn-primary" value="Add To Blog">
            }
        </div>
    </div>
</div>