@using Microsoft.AspNet.Http;
@model InspirationSite.Models.PackMembers

@{ViewBag.Title = "Edit";}
<div class="container">
    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Edit PackMember
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li>
                    @Html.ActionLink("Our Team","OurTeam","About")
                </li>
                <li class="active">Edit</li>
            </ol>
        </div>
    </div>
    <!-- Contact Form -->
    <!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
    <div class="row">
        <div class="col-md-8">
            @using (Html.BeginForm("Edit", "About", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <table>
                    <tr>
                        <td>@Html.LabelFor(model => model.Username)<b>: </b></td>
                    </tr>
                    <tr>
                        <td>@Html.TextBoxFor(model => model.Username, new { @class = "form-control", size = "400" })</td>
                    </tr>
                    <tr></tr>
                    <tr></tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.Password)<b>: </b></td>
                    </tr>
                    <tr>
                        <td>@Html.TextBoxFor(model => model.Password, new { @class = "form-control" })</td>
                    </tr>
                    <tr></tr>
                    <tr></tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.Name)<b>: </b></td>
                    </tr>
                    <tr>
                        <td>@Html.TextBoxFor(model => model.Name, new { @class = "form-control" })</td>
                    </tr>
                    <tr></tr>
                    <tr></tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.ImageURL)<b>: </b></td>
                    </tr>
                    <tr>
                        <td>@Html.TextBoxFor(model => model.ImageURL, new { @class = "form-control" })</td>
                    </tr>
                    <tr></tr>
                    <tr></tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.FacebookURL)<b>: </b></td>
                    </tr>
                    <tr>
                        <td>@Html.TextBoxFor(model => model.FacebookURL, new { @class = "form-control" })</td>
                    </tr>
                    <tr></tr>
                    <tr></tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.TwitterURL)<b>: </b></td>
                    </tr>
                    <tr>
                        <td>@Html.TextBoxFor(model => model.TwitterURL, new { @class = "form-control" })</td>
                    </tr>
                    <tr></tr>
                    <tr></tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.Bio)<b>: </b></td>
                    </tr>
                    <tr>
                        <td>@Html.TextAreaFor(model => model.Bio, new { @class = "form-control", style = "resize:none;", rows = "10" })</td>
                    </tr>
                    <tr></tr>
                    <tr></tr>
                </table>
                <br />
                <input type="submit" class="btn btn-primary" value="Save">
                @Html.ActionLink("Cancel", "OurTeam", "About", null ,new { @class = "btn btn-primary"});
            }
        </div>
    </div>
    <!-- /.row -->
    <hr>
    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; The PACK 2016</p>
            </div>
        </div>
    </footer>
</div>