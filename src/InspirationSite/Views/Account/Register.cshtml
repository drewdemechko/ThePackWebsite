@model InspirationSite.Models.PackMembers
@{ViewBag.Title = "Register";}
<head>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<div class="container">
    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Register
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="active">Register</li>
            </ol>
        </div>
    </div>
    <!-- Contact Form -->
    <!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
    <div class="row">
        <div class="col-md-8">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="control-group form-group">
                    <div class="controls">
                        @Html.LabelFor(model => model.Username)<b>: </b>
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", size = "400" })
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        @Html.LabelFor(model => model.Password)<b>: </b>
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        @Html.LabelFor(model => model.Name)<b>: </b>
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        @Html.LabelFor(model => model.ImageURL)<b>: </b>
                        @Html.TextBoxFor(model => model.ImageURL, new { @class = "form-control" })
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        @Html.LabelFor(model => model.FacebookURL)<b>: </b>
                        @Html.TextBoxFor(model => model.FacebookURL, new { @class = "form-control" })
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        @Html.LabelFor(model => model.TwitterURL)<b>: </b>
                        @Html.TextBoxFor(model => model.TwitterURL, new { @class = "form-control" })
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        @Html.LabelFor(model => model.Bio)<b>: </b>
                        @Html.TextBoxFor(model => model.Bio, new { @class = "form-control", style = "resize:none;", rows = "10" })
                    </div>
                </div>
                <br />
                @Html.ActionLink("I Already Have an Account", "Login", "Account", null, new { style = "float:right;" })
                <input type="submit" class="btn btn-primary" value="Register">
            }
        </div>
        <!--Displays preview of image URL-->
        <div class="col-md-3 img-portfolio" style="float:right;">
            <a href="portfolio-item.html">
                <img class="img-responsive img-hover" id="imagePreview" src="http://placehold.it/750x450" alt="This is not a valid Image URL. Please try the link again.">
            </a>
        </div>
    </div>
    <!-- /.row -->
    <hr>
    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; The PACK 2016</p>
            </div>
        </div>
    </footer>
</div>
<script>
    $("#ImageURL").blur(function () {
        var newImageSrc = $("#ImageURL").val();
        $("#imagePreview").attr("src", newImageSrc);
    });
</script>