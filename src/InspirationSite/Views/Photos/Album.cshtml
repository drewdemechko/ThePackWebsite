@using Microsoft.AspNet.Http;
@model IEnumerable<InspirationSite.Models.Photos>
@{ViewBag.Title = "Our Album";}

<!-- Page Content -->
<div class="container">
    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Photos
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="active">Photos</li>
            </ol>
            @if (Context.Session.GetString("Username") == "drewdemechko")
            {
                <div style="float:right;">
                    @Html.ActionLink("Add Photo", "AddPhoto", "Photos")
                </div>
            }
        </div>
    </div>
    <!-- /.row -->
    <!-- Projects Row -->
    <div class="row">
        @foreach (var photo in Model)
        {
            <div class="col-md-3 img-portfolio">
                <a href="portfolio-item.html">
                    <img class="img-responsive img-hover" src="@Html.DisplayFor(modelItem => photo.ImageURL)" alt="">
                </a>
                @if (Context.Session.GetString("Username") == "drewdemechko")
                {
                    @Html.ActionLink("Delete Photo", "DeletePhoto", new { id = photo.PhotoId })
                }
            </div>
        }
    </div>

    <hr>
    <!-- Pagination -->
    <div class="row text-center">
        <div class="col-lg-12">
            <ul class="pagination">
                <li>
                    <a href="#">&laquo;</a>
                </li>
                <li class="active">
                    <a href="#">1</a>
                </li>
                <li>
                    <a href="#">2</a>
                </li>
                <li>
                    <a href="#">3</a>
                </li>
                <li>
                    <a href="#">4</a>
                </li>
                <li>
                    <a href="#">5</a>
                </li>
                <li>
                    <a href="#">&raquo;</a>
                </li>
            </ul>
        </div>
    </div>
    <!-- /.row -->
    <hr>
    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; The PACK 2016</p>
            </div>
        </div>
    </footer>
</div>