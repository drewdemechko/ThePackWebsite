@{ViewBag.Title = "Register";}
<div class="container">
    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Register
            </h1>
            <ol class="breadcrumb">
                <li>
                    <a href="index.html">Home</a>
                </li>
                <li class="active">Register</li>
            </ol>
        </div>
    </div>
    <!-- Contact Form -->
    <!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
    <div class="row">
        <div class="col-md-8">
            <form name="RegisterForm" id="RegisterForm" novalidate>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Username:</label>
                        <input type="text" class="form-control" id="username" required data-validation-required-message="Please enter your username.">
                        <p class="help-block"></p>
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Password:</label>
                        <input type="password" class="form-control" id="password" required data-validation-required-message="Please enter your password.">
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Name:</label>
                        <input type="text" class="form-control" id="name" required data-validation-required-message="Please enter your name.">
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>ImageURL:</label>
                        <input type="text" class="form-control" id="imageurl">
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>FacebookURL:</label>
                        <input type="text" class="form-control" id="facebookurl">
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>TwitterURL:</label>
                        <input type="text" class="form-control" id="twitterurl">
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Bio:</label>
                        <textarea rows="10" cols="100" class="form-control" id="bio" required data-validation-required-message="Please enter a short biography about yourself." maxlength="999" style="resize:none"></textarea>
                    </div>
                </div>
                <a style="float:right" href="/Login">Already Have an Account - Login?</a><br/>
                <div id="success"></div>
                <!-- For success/fail messages -->
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
    <!-- /.row -->
    <hr>
    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; The PACK 2016</p>
            </div>
        </div>
    </footer>
</div>