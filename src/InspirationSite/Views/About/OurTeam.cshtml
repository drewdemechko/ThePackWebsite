@using Microsoft.AspNet.Http;
@model IEnumerable<InspirationSite.Models.PackMembers>
@{ViewBag.Title = "Our Pack";}

    <!-- Page Content -->
<div class="container">
    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Meet Us
            </h1>
            <ol class="breadcrumb">
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li class="active">Meet Us</li>
            </ol>
        </div>
    </div>
    <!-- /.row -->
    <!-- Intro Content -->
    <!-- Team Members -->
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">Our Team</h2>
        </div>
        @foreach (var member in Model){
        <div class="col-md-4 text-center">
            <div class="thumbnail">
                <img class="img-responsive" target="_blank" src="@Html.DisplayFor(modelItem => member.ImageURL)" alt="">
                <div class="caption">
                    <h3>
                        @Html.DisplayFor(modelItem => member.Name)<br>
                      <!--  <small>Job Title</small>  -->
                    </h3>
                    <p>@Html.DisplayFor(modelItem => member.Bio)</p>
                    <ul class="list-inline">
                        <li>
                            <a target="_blank" href="//@Html.DisplayFor(modelItem => member.FacebookURL)"><i class="fa fa-2x fa-facebook-square"></i></a>
                        </li>
                    <!--<li>
                            <a href="#"><i class="fa fa-2x fa-linkedin-square"></i></a>
                        </li>  -->
                        <li>
                            <a target="_blank" href="//@Html.DisplayFor(modelItem => member.TwitterURL)"><i class="fa fa-2x fa-twitter-square"></i></a>
                        </li>
                        @if (Context.Session.GetString("Username") == "drewdemechko")
                        {
                        <li>
                           @Html.ActionLink("Edit","Edit", new { id = member.MemberId } )
                        </li>
                        <li>
                            @Html.ActionLink("Delete", "Delete", new { id = member.MemberId })
                        </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        }
    </div>
    <!-- /.row -->
    <hr>
    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; The PACK 2016</p>
            </div>
        </div>
    </footer>
</div>
